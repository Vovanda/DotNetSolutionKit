{
  "Application": {
    "Name": "NamespaceRoot.ProductName.ServiceNameOrCustom API - Local Environment",
    "ShortName": "ServiceNameOrCustom API",
    "Description": "Local development environment for NamespaceRoot.ProductName.ServiceNameOrCustom"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "NamespaceRoot.ProductName.ServiceNameOrCustom.API.Middleware": "Debug",
        "NamespaceRoot.ProductName.ServiceNameOrCustom.Application": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Properties": {
      "Environment": "Local"
    }
  },
  "InternalApi": {
    "ApiKey": "",
    "_comment_ApiKey": "REQUIRED: Local system API key"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:*",
      "http://localhost:*"
    ]
  },
  "HangfireSettings": {
    "DashboardUser": "admin",
    "DashboardPassword": "",
    "_comment_DashboardPassword": "REQUIRED: Min 12 chars for Basic Auth validation",
    "WorkerCount": 5
  }
}